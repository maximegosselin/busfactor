{
  "name": "busfactor/busfactor",
  "type": "library",
  "description": "CQRS and Event Sourcing infrastructure for modern PHP",
  "homepage": "https://github.com/busfactor/busfactor",
  "license": "MIT",
  "authors": [
    {
      "name": "Maxime Gosselin",
      "email": "maxime.gosselin@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "ext-pdo": "*",
    "ramsey/uuid": "^3.0 || ^4.0"
  },
  "require-dev": {
    "ext-memcached": "*",
    "ext-mongodb": "*",
    "ext-pdo_sqlite": "*",
    "friendsofphp/php-cs-fixer": "^2",
    "mongodb/mongodb": "^1.7",
    "phpstan/phpstan": "^0.12.0",
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "^3"
  },
  "autoload": {
    "psr-4": {
      "BusFactor\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BusFactor\\Test\\": "tests"
    }
  },
  "scripts": {
    "format": "php-cs-fixer fix",
    "scan": "phpstan analyse -l 4 src tests",
    "style": "phpcs -p -s",
    "test": "phpunit"
  }
}
